<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="backgroundColor" format="color|reference" />
    <attr name="hintText" format="string" localization="suggested" />
    <attr name="hintTextColor" format="color|reference" />
    <attr name="text" format="string" />

    <declare-styleable name="OSIllustrationView" parent="HasBackground">
        <attr name="illustration" format="reference" />
        <attr name="text" />
        <attr name="showButton" format="boolean" />
        <attr name="buttonText" format="string" />
    </declare-styleable>

    <declare-styleable name="OSSearchView" parent="HasBackground">
        <attr name="backgroundColor" />
        <attr name="hintText" />
        <attr name="hintTextColor" />
        <attr name="showSearchIcon" format="boolean" />
        <attr name="showSearchButton" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PathSpot">
        <attr name="bgTint" format="color" />
        <attr name="iconTint" format="color" />
        <attr name="src" format="reference" />
    </declare-styleable>

    <declare-styleable name="OrderTimelineView">
        <attr name="preTint" format="color" />
        <attr name="postTint" format="color" />
    </declare-styleable>

    <declare-styleable name="OSProfileItem">
        <attr name="title" format="string" />
        <attr name="icon" format="reference" />
        <attr name="titleColor" format="color" />
        <attr name="iconColor" format="color" />
        <attr name="dividerColor" format="color" />
    </declare-styleable>

    <declare-styleable name="OSInfoBanner" parent="HasBackground">
        <attr name="text" />
        <attr name="hasInfo" format="boolean" />
        <attr name="backgroundColor" />
        <attr name="textColor" format="color" />
        <attr name="cornerRadius" format="dimension" />
        <attr name="elevation" format="dimension" />
        <attr name="infoTitle" format="string" />
        <attr name="infoMessage" format="string" />
        <attr name="infoTint" format="color" />
        <attr name="infoPositiveBtnText" format="string" />
        <attr name="infoNegativeBtnText" format="string" />
    </declare-styleable>
</resources>